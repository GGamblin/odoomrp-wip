<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_category_no_variant_form_view">
            <field name="name">product.category.no.variant.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view" />
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="no_create_variants" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_no_variant_form_view">
            <field name="name">product.template.no.variant.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='%(product.product_attribute_value_action)d']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header/button[@name='%(product.product_attribute_value_action)d']" position="before">
                    <button string="Variant Prices" type="action"
                            name="%(product.product_attribute_value_action)d"
                            groups="product.group_product_variant"/>
                </xpath>
                <field name="attribute_line_ids" position="before">
                    <!-- old v8 location <div class="oe_button_box" name="variants_button_box">
                        <button class="oe_inline oe_stat_button" name="action_open_attribute_prices"
                            icon="fa-strikethrough" type="object" string="Variant Prices">
                        </button>
                    </div>-->
                    <group>
                        <field name="no_create_variants" />
                    </group>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_attribute_value_view_tree">
            <field name="name">product_attribute_value_view_tree</field>
            <field name="model">product.attribute.value</field>
            <field name="inherit_id" ref="product.product_attribute_value_view_tree"/>
            <field name="arch" type="xml">
                
                <field name="attribute_id" position="attributes">
                    <attribute name="readonly" >1</attribute>
                </field>
                
                <field name="name" position="attributes">
                    <attribute name="readonly" >1</attribute>
                </field>
                
            </field>
        </record>
        
        
    </data>
</openerp>
